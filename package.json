{
  "name": "ly-tool-git-commitlint",
  "version": "1.0.4",
  "description": "基于vue-cli3的代码提交检查规范",
  "main": "index.js",
  "scripts": {
    "log": "conventional-changelog --config ./lib/log -i CHANGELOG.md -s -r 0",
    "cz": "npm run log && git add . && git cz"
  },
  "devDependencies": {
    "commitizen": "^4.0.3",
    "commitlint": "^8.2.0",
    "conventional-changelog-cli": "^2.0.28",
    "husky": "^3.0.9"
  },
  "config": {
    "commitizen": {
      "path": "lib/cz"
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "author": "liuyang",
  "license": "ISC"
}
